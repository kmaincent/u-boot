/dts-v1/;

/* First 128KB is for PSCI ATF. */
/* Last 127M is for M4/RPMSG */
/memreserve/ 0x80000000 0x08000000;


#include "fsl-imx8qxp.dtsi"

/ {
	model = "congatec SMX8-X aka SX8X";
	compatible = "fsl,imx8qxp-cgtsx8x", "fsl,imx8qxp";

//	aliases {
//		/*
//		   u-boot uses the uclass seq number as bus number, see "i2c bus".
//		   The uclass seq number is usually derived from the node name.
//		   Is the node-name complex, like i2c0_cm40, the mapping will fail.
//		   A correct mapping could usually be achieved by setting an alias.
//		   BUT <struct imx_i2c_map imx_i2c_desc[]> defined at
//		   <arch/arm/include/asm/arch-imx8/i2c.h>
//		   creates a static mapping between uclass seq/bus number and SC
//		   resource. So "reordering" i.MX8 i2c busses by use of aliases,
//		   will usually break the access to the specific i2c busses.
//		   In case of <i2c0_cm40>, an alias i2c17 MUST be created to
//		   match the static mapping defined by <imx_i2c_desc[]>.
//		   Please note:
//		     The i2c node name / alias corresponds to the static mapping
//		     defined by <imx_i2c_desc[]>.
//		*/
//		i2c17 = &i2c0_cm40;
//	};

	chosen {
		bootargs = "console=ttyLP2,115200 earlycon=lpuart32,0x5a080000,115200";
		stdout-path = &lpuart2;
	};

	regulators {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <0>;

		reg_usdhc2_vmmc: usdhc2_vmmc {
			compatible = "regulator-fixed";
			regulator-name = "SD1_SPWR";
			regulator-min-microvolt = <3000000>;
			regulator-max-microvolt = <3000000>;
			gpio = <&gpio4 19 GPIO_ACTIVE_HIGH>;
			enable-active-high;
			startup-delay-us = <100>;
			/* at kernel DT, the property is called off-on-delay */
			//off-on-delay = <3480>;
			off-on-delay-us = <12000>;
		};

		reg_usb_otg1_vbus: regulator@0 {
			compatible = "regulator-fixed";
			reg = <0>;
			regulator-name = "usb_otg1_vbus";
			regulator-min-microvolt = <5000000>;
			regulator-max-microvolt = <5000000>;
			//gpio = <&pca9557_b 2 GPIO_ACTIVE_HIGH>;
			enable-active-high;
		};
	};
};

